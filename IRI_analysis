def IRI(csv, scoring_csv):
  import pandas as pd
  import numpy as np
  df_raw = pd.read_csv(csv, encoding="shift-jis")
  df_scoring = pd.read_csv(scoring_csv)

  df_score_1 = df_raw.iloc[:, 3:]

  list = []
  for i in range(1, 29):
    list.append(i)
  
  df_score_2 = df_score_1.set_axis(list, axis = 1)
  df_scoring_2 = df_scoring.set_axis(list, axis=1)

  df = pd.concat([df_scoring_2, df_score_2])
  display(df) 
